<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="R3 Corda" id="BNMembershipSchemaV1">
        <createTable tableName="bn_membership">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="identity" type="longvarbinary"/>
            <column name="network_id" type="varchar(255)"/>
            <column name="status" type="integer"/>
            <column name="roles" type="longvarbinary"/>
        </createTable>
        <addPrimaryKey columnNames="id"
                       constraintName="PK_BNMembershipSchemaV1"
                       tableName="bn_membership"/>
    </changeSet>
</databaseChangeLog>